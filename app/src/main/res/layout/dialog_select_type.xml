<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/horn_gray_f7_5dp"
        android:orientation="horizontal"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_single_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/horn_white_bg_5dp"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:padding="15dp"
                android:text="单行文本"
                android:textColor="@color/theme"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_single_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/horn_white_bg_5dp"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:padding="15dp"
                android:text="单选问题"
                android:textColor="@color/theme"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_multiple_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/horn_white_bg_5dp"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:padding="15dp"
                android:text="多行文本"
                android:textColor="@color/theme"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_multiple_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/horn_white_bg_5dp"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:padding="15dp"
                android:text="多选问题"
                android:textColor="@color/theme"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>